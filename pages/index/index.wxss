/**index.wxss**/
.auto-layout {
  margin: 0 10rpx;
}

.header {
  background-color: #efd2a8;
  text-align: center;
  padding-bottom: 20px;
  font-size:30rpx;
}

.title {
  font-size:30rpx;
  color: #c82829;
}

.article {
  font-size:26rpx;
}

input {
  display: inline-block;
  border: 1px solid #9E9E9E;
  border-radius: 5px;
  overflow: visible;
}

.sub-title {
  font-size:30rpx;
}

.auto-layout view {
  margin: 15rpx;
}

.pd-adjust {
  margin-left: 14rpx;
  font-size: 30rpx;
}

.radio-group {
  display: inline-block;
}

.radio-group radio,checkbox {
  margin-left: 30rpx;
}

.wanted {
  width: 280rpx;
}

.deliver-section {
  margin: 20rpx 0;
  border-top: 1px solid #03a9f4;
  border-bottom: 1px solid #03a9f4;
  text-align: center;
}

.deliver-section button {
  margin: 20rpx auto 10rpx;
}